@model Videoteka.Models.Movie

@{
    ViewData["Title"] = "Přidat film";
}

<h1>@ViewData["Title"]</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Title" class="control-label"></label>
                <input asp-for="Title" class="form-control" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
            <div class="form-group mt-2">
                <label asp-for="ReleaseYear" class="control-label"></label>
                <input asp-for="ReleaseYear" class="form-control" />
                <span asp-validation-for="ReleaseYear" class="text-danger"></span>
            </div>
            <div class="form-group mt-2">
                <label asp-for="Genre" class="control-label"></label>
                <select asp-for="GenreId" class ="form-control" asp-items="ViewBag.GenreList"></select>
            </div>
            <div class="form-group mt-2">
                <label id="labelRating" class="control-label">Hodnocení: 0/5</label>
                <input type="hidden" asp-for="Rating" />
                <input type="range" min="0" max="5" value="0" class="form-range" oninput="inputChange(this.value)" />
                <span asp-validation-for="Rating" class="text-danger"></span>
            </div>
            <div class="form-group mt-2">
                <input type="submit" value="Přidat film" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" class="btn btn-secondary mt-2">Zpět na seznam</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script src="~/js/script.js"></script>
}
